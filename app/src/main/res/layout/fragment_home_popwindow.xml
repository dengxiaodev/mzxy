<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="bottom"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/fr_home_bag_frame"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/fragment_page_bagframe" />

        <com.example.mzxy.smart.SmartImageView
            android:id="@+id/fr_home_picture"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/fragment_page_bagpicture" />

        <TextView
            android:id="@+id/fr_home_bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/fr_home_bag_frame"
            android:text="袋洗"
            android:textColor="@color/textBlack"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fr_home_amounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="65dp"
            android:layout_toRightOf="@id/fr_home_bag_frame"
            android:text="￥68"
            android:textColor="@color/orange"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="73dp"
            android:layout_toRightOf="@id/fr_home_amounts"
            android:text=" /袋"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/duoshao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="108dp"
            android:layout_toRightOf="@id/fr_home_bag_frame"
            android:text="装多少，洗多少！"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/qin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="135dp"
            android:layout_toRightOf="@id/fr_home_bag_frame"
            android:text="亲，皮衣、真丝内衣、袜子、鞋子不要装哦！"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/pop_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/fr_home_less"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/fragment_page_cuts" />

            <TextView
                android:id="@+id/fr_home_num"
                android:layout_width="90dp"
                android:layout_height="56dp"
                android:background="@mipmap/fragment_page_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/orange"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/fr_home_plus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/fragment_page_plus" />
        </LinearLayout>

        <Button
            android:id="@+id/fr_home_join"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/pop_linear"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:background="@color/blue"
            android:text="加入洗衣篮"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>