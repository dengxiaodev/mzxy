<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.example.mzxy.smart.SmartImageView
            android:id="@+id/spring_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/fragment_clothes1"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/spring_image"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/spring_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spring_image"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:text="T恤"
            android:textColor="@color/textBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/spring_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spring_name"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:text="￥8"
            android:textColor="@color/orange"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>
