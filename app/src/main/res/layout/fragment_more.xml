<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myandroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayLight"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/more_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更多"
            android:textColor="@color/textDarkColor"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <com.example.mzxy.Item.FragmentMoreItem
        android:id="@+id/fragment_more_reached"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        myandroid:fragmentMore_arrow="@mipmap/bg_right"
        myandroid:fragmentMore_image="@mipmap/fragment_more_reached"
        myandroid:fragmentMore_text="联系客服" />

    <com.example.mzxy.Item.FragmentMoreItem
        android:id="@+id/fragment_more_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        myandroid:fragmentMore_arrow="@mipmap/bg_right"
        myandroid:fragmentMore_image="@mipmap/fragment_more_common"
        myandroid:fragmentMore_text="常见问题" />

    <com.example.mzxy.Item.FragmentMoreItem
        android:id="@+id/fragment_more_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        myandroid:fragmentMore_arrow="@mipmap/bg_right"
        myandroid:fragmentMore_image="@mipmap/fragment_more_service"
        myandroid:fragmentMore_text="服务范围" />

    <com.example.mzxy.Item.FragmentMoreItem
        android:id="@+id/fragment_more_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        myandroid:fragmentMore_arrow="@mipmap/bg_right"
        myandroid:fragmentMore_image="@mipmap/fragment_more_about"
        myandroid:fragmentMore_text="关于我们" />

    <com.example.mzxy.Item.FragmentMoreItem
        android:id="@+id/fragment_more_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        myandroid:fragmentMore_arrow="@mipmap/bg_right"
        myandroid:fragmentMore_image="@mipmap/fragment_more_user"
        myandroid:fragmentMore_text="用户协议" />

    <com.example.mzxy.Item.FragmentMoreItem
        android:id="@+id/fragment_more_opinion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        myandroid:fragmentMore_arrow="@mipmap/bg_right"
        myandroid:fragmentMore_image="@mipmap/fragment_more_opinion"
        myandroid:fragmentMore_text="意见反馈" />

    <Button
        android:id="@+id/more_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@color/bg_red"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>